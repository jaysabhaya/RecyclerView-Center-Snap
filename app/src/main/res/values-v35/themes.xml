<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        On Android 15+ (API 35), edge-to-edge is enforced by default which
        causes android:statusBarColor to be ignored and the status bar becomes
        transparent/invisible. This override opts out of that behaviour by
        inheriting from the full MaterialComponents parent (not self) and
        explicitly setting windowOptOutEdgeToEdgeEnforcement.
    -->
    <style name="Theme.RecyclerViewCenterSelected" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Opt out of forced edge-to-edge on Android 15+ -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>
</resources>
